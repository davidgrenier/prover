                   ((A A Q) (if-nest-A (atom y) (equal y '?)
                                       (if (ctx? (car y))
                                           't
                                           (ctx? (cdr y)))))
                   ((A A A 1 1) (if-nest-A (equal y '?) x y))
                   ((A A A 1) (equal-if (ctx? x) 't))
